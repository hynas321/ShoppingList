<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="56sp"
    android:layout_marginLeft="34sp"
    android:layout_marginRight="12sp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/shopping_list_item_icon"
        android:layout_width="62dp"
        android:layout_height="56dp"
        android:contentDescription="@string/app_name"
        android:padding="10dp"
        android:src="@mipmap/ic_launcher"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/shopping_list_item_textView_name"
        android:layout_width="221dp"
        android:layout_height="56dp"
        android:text="aaa"
        android:textSize="@dimen/textView_title_textSize" />

    <ImageView
        android:id="@+id/shopping_list_item_delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/trash_bin_icon" />

</LinearLayout>