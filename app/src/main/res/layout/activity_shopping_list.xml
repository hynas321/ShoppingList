<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShoppingListActivity">

    <include
        android:id="@+id/toolbar_shopping_list"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/product_list_recyclerView_product"
        android:layout_width="360dp"
        android:layout_height="520dp"
        app:layout_constraintBottom_toTopOf="@+id/shopping_list_button_add_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_shopping_list" />

    <Button
        android:id="@+id/shopping_list_button_add_list"
        android:layout_width="315dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:text="@string/main_button_add_list"
        android:textSize="@dimen/button_textSize"
        app:layout_constraintBottom_toTopOf="@+id/custom_navigation_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <include
        android:id="@+id/custom_navigation_bar"
        layout="@layout/custom_navigation_bar"
        android:layout_width="415dp"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>