<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_item"
    android:layout_width="match_parent"
    android:layout_height="56sp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageView_categoryIcon"
        android:layout_width="59dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10sp"
        android:src="@drawable/ic_shopping_cart"
        tools:srcCompat="@drawable/ic_shopping_cart"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:text="Product"
        android:textSize="@dimen/toolbar_title_textSize" />

    <TextView
        android:id="@+id/textView_quantity"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:text="50"
        android:textSize="@dimen/toolbar_title_textSize" />

    <ImageView
        android:id="@+id/imageView_vertical_dots_icon"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_marginLeft="10sp"
        app:srcCompat="@drawable/ic_vertical_dots" />

</LinearLayout>